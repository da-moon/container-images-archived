set shell=/bin/bash
let vim_plug_just_installed = 0
let vim_plug_path = expand('~/.vim/autoload/plug.vim')
if !filereadable(vim_plug_path)
    echo "Installing Vim-plug..."
    echo ""
    silent !mkdir -p ~/.vim/autoload
    silent !curl -fLo ~/.vim/autoload/plug.vim --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
    let vim_plug_just_installed = 1
endif
let vim_pathogen_just_installed = 0
let vim_pathogen_path = expand('~/.vim/autoload/pathogen.vim')
if !filereadable(vim_pathogen_path)
    echo "Installing Vim-pathogen..."
    echo ""
    silent !mkdir -p ~/.vim/{autoload,bundle}
    silent !curl -LSso ~/.vim/autoload/pathogen.vim https://tpo.pe/pathogen.vim
    let vim_pathogen_just_installed = 1
    " Pathogen plugins
    silent !git clone git://github.com/godlygeek/tabular.git ~/.vim/bundle/tabular
    silent !git clone git://github.com/nathanaelkane/vim-indent-guides.git ~/.vim/bundle/vim-indent-guides
    silent !git clone git://github.com/elzr/vim-json ~/.vim/bundle/vim-json
endif

if vim_plug_just_installed
    :execute 'source '.fnameescape(vim_plug_path)
endif

" Obscure hacks done, you can now modify the rest of the .vimrc as you wish :)

